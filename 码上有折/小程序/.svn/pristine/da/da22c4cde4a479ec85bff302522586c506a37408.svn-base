/* pages/invite/invite.wxss */
.app2 view{
    margin: 0;
    padding: 0;
    line-height: 0;
    vertical-align: middle;
    text-decoration: none;
    color: #333;
    font-size: 26.88rpx;
}

.popup-qr-code .main-content2 {
    position:fixed;
    left:0rpx;
    top:auto;
    bottom:10rpx;
    right:0rpx;
    height:180rpx;
    background-color:#fff;
    z-index:2;
    border-radius:14.56rpx;
    text-align:center;
    box-shadow:0 0 28.8rpx rgba(0, 0, 0, .5);
    bottom:5rpx;
    width:100%;
}
.weChatChare{
    display:flex; height:180rpx; align-items:center;
}
.weChatChare button{
    background-color: transparent; height: 180rpx;width:50%; display:flex; align-items: center; justify-content:center;
}
.weChatChare button::after{
    border:none;
}
.weChatChare image{
    height: 100rpx; width: 110rpx; margin-bottom: 30rpx;
}
.weChatChare-item{
    width:50%;
    display:flex;
    flex-direction: column;
    align-items:center;
}
